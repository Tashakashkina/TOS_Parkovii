import 'package:flutter/material.dart';

class ThirdPage extends StatelessWidget {
  const ThirdPage({Key? key}) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Color.fromRGBO(240, 240, 238, 1),
      appBar: AppBar(
        leading: BackButton(color: Color.fromRGBO(35, 33, 34, 1)),
        backgroundColor: Color.fromRGBO(174, 213, 243, 1),
        title: const Text("Мероприятия",
            style: TextStyle(color: Color.fromRGBO(35, 33, 34, 1))),
      ),
      body: const SafeArea(
        child: _ThirdPageList(),
      ),
    );
  }
}

class _ThirdPageList extends StatefulWidget {
  const _ThirdPageList({Key? key}) : super(key: key);

  @override
  _ThirdPageListState createState() => _ThirdPageListState();
}

class _ThirdPageListState extends State<_ThirdPageList> {
  @override
  Widget build(BuildContext context) {
    return Container(
      margin: EdgeInsets.fromLTRB(10, 20, 10, 60),
      height: 700,
      width: 400,
      decoration: BoxDecoration(
          color: Colors.white,
          border: Border.all(color: Colors.white),
          borderRadius: BorderRadius.circular(12)),
      child: ListView.separated(
        itemCount: 15,
        separatorBuilder: (BuildContext context, int index) {
          return _ThirdPageListRow(indexInList: index);
        },
        itemBuilder: (BuildContext context, int index) {
          return const Divider(height: 4);
        },
      ),
    );
  }
}

class _ThirdPageListRow extends StatelessWidget {
  final int indexInList;
  const _ThirdPageListRow({
    Key? key,
    required this.indexInList,
  }) : super(key: key);

  @override
  Widget build(BuildContext context) {
    return ListTile(
      title: Text('Заголовок мероприятия'),
      subtitle: Text('Краткое описание мероприятия'),
      trailing: Image(
          image: AssetImage('assets/images/next.png'),
          width: 27,
          height: 27,
          color: null),
      onTap: () {
        Navigator.of(context).pushNamed('/details');
      },
    );
  }
}